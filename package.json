{
  "name": "sportsradar",
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": "16.13.2"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "chai-http": "^4.3.0",
    "express": "^4.18.1",
    "node-cron": "^3.0.2",
    "sqlite3": "^5.1.2",
    "ts-node": "^10.9.1"
  },
  "directories": {
    "lib": "./lib",
    "src": "./",
    "test": "./test"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/express": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18.7.23",
    "@types/node-cron": "^3",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "chai": "^4.3.6",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "typescript": "4.7.4"
  },
  "scripts": {
    "build": "yarn test && tsc",
    "deploy": "git push heroku master",
    "dev": "chmod u+x ./scripts/nodejs-start.sh && ./scripts/nodejs-start.sh",
    "lint": "eslint . --ext .ts",
    "start": "chmod u+x ./scripts/nodejs-start.sh && ./scripts/nodejs-start.sh",
    "pretty": "prettier --write .",
    "postinstall": "husky install",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/**/*.ts'"
  },
  "main": "lib/index.js"
}
